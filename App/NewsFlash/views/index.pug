			.col-md-12

		#normalModal(class="modal fade")
			div(class="modal-dialog")
				div(class="modal-content")
					div(class="modal-header")
						button(type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="closeReader()") &times;
						//h4(class="modal-title") Title
						button(type="button" onclick="startReader()" class="btn btn-primary") Start
						br

					div(class="modal-body")

						#test_area(class="words" style="text-align:center;")

